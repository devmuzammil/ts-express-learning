generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  book      Book[]
  createdAt DateTime @default(now())
}

model Book {
  id     Int    @id @default(autoincrement())
  title  String
  author String
  userid Int
  user   User   @relation(fields: [userid], references: [id])

  @@index([author])
}